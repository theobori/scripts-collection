#!/usr/bin/env bash

USER_BASE=nixbld
GROUP=nixbld

# Disable the service
systemctl disable nix-daemon.socket
systemctl disable nix-daemon.service
systemctl daemon-reload

# Remove every nix files
rm -rf ~/.nix-*
rm -rf /root/.nix-*
rm -f /etc/bashrc /etc/zshrc
rm -f /etc/profile.d/nix.sh
rm -r /etc/**/*nix
rm -rf /nix /etc/nix

# Remove user
for (( i = 0; i < 32 ; i++ )); do
    userdel ${USER_BASE}${i}
done

# Remove group
groupdel ${GROUP}
