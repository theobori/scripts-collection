#!/usr/bin/env bash

set -e

RESOLVED_DIR=$(dirname $(realpath ${0}))

source "${RESOLVED_DIR}/../lib/sc-utils"

# Script version
readonly VERSION=0.2.0

readonly FILENAME=$(basename ${0})

# Default variables
WORK_DURATION=1500000 # 25 minutes
PAUSE_DURATION=300000 # 5 minutes
TIMER_STYLE="simple"

function print_help() {
    cat <<USAGE
${FILENAME}
Version ${VERSION}

Optional arguments
  -h, --help            Show this help message
  -v, --version         Print the script version
  -w, --work            Work duration (in minutes)
  -p, --pause           Pause duration (in minutes)
  --timer-style         The timer text style ("simple" or "fancy")
USAGE
}

function parse_cli_arguments() {
    while test $# -gt 0; do
        case ${1} in
            "-w" | "--work")
                test $# -ge 2 || return 1

                if [[ ${2} -lt 5 ]]; then
                    echo "The minimum work duration must be 5 minutes"
                    return 1
                fi

                WORK_DURATION=$((${2} * 60 * 1000))

                shift 2
                ;;
            
            "-p" | "--pause")
                test $# -ge 2 || return 1

                if [[ ${2} -lt 1 ]]; then
                    echo "The minimum pause duration must be 1 minutes"
                    return 1
                fi

                PAUSE_DURATION=$((${2} * 60 * 1000))

                shift 2
                ;;
            
            "--timer-style")
                test $# -ge 2 || return 1

                TIMER_STYLE=${2}

                shift 2
                ;;

            "-h" | "--help")
                print_help
                exit 0
                ;;
            
            "-v" | "--version")
                echo ${FILENAME} -- ${VERSION}
                exit 0
                ;;
            
            "--" )
                break
                ;;
            
            *)
                return 1
            ;;
        esac    
    done
}

# ${1} Notification ID
function work() {
    local -r summary="ðŸ‘ Focus & work !"

    timer ${WORK_DURATION} ${1} "normal" "${summary}" "${TIMER_STYLE}"
}

# ${1} Notification ID
function pause() {
    local -r summary="â±ï¸ Take a pause !"
    
    timer ${PAUSE_DURATION} ${1} "critical" "${summary}" "${TIMER_STYLE}"
}

function pomodoro() {
    NOTIFICATION_ID=$(notify-send "â¤ï¸ Pomodoro" -p)

    while :; do
        work ${NOTIFICATION_ID}
        pause ${NOTIFICATION_ID}
    done
}

function main() {
    parse_cli_arguments $@ || exit 1

    pomodoro
}

main $@
